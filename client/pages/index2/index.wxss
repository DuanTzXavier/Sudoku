.userinfo, .uploader, .tunnel {
    margin-top: 300rpx;
    width: 100%;
    transition: all 300ms ease;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
}